<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            style="@style/DefaultMainLayoutContainer" >

    <LinearLayout android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content" >

        <EditText android:id="@+id/new_note_title"
                  style="@style/DefaultTextViewTitle"
                  android:layout_marginTop="10dp"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:hint="@string/note_title"/>

        <EditText android:id="@+id/new_note_details"
                  style="@style/DefaultTextView"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:hint="@string/note_details"
                  android:minHeight="150dp"
                  android:gravity="left|top"/>

        <Button android:id="@+id/save_note_button"
                android:text="@string/save"
                style="@style/DefaultButton" />
        <Button android:id="@+id/cancel_new_note_button"
                android:text="@string/cancel"
                style="@style/DefaultButton" />

    </LinearLayout>

</ScrollView>